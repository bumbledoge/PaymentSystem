@page
@model PayementSystem.Pages.Payments.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Payment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Payment.ID" />
            <div class="form-group">
                <label asp-for="Payment.Value" class="control-label"></label>
                <input asp-for="Payment.Value" class="form-control" />
                <span asp-validation-for="Payment.Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.Description" class="control-label"></label>
                <input asp-for="Payment.Description" class="form-control" />
                <span asp-validation-for="Payment.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.PaymentDate" class="control-label"></label>
                <input asp-for="Payment.PaymentDate" class="form-control" />
                <span asp-validation-for="Payment.PaymentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.RecipientID" class="control-label">Recipient Name</label>
                <select asp-for="Payment.RecipientID" class="form-control" asp-items="ViewBag.RecipientID"></select>
                <span asp-validation-for="Payment.RecipientID" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <div class="table">
                     <table>
                         <tr>
                         @{
                         int cnt = 0;
                         foreach (var cat in Model.AssignedTagDataList)
                        {
                         if (cnt++ % 3 == 0)
                        {
                        @:</tr><tr>
                        }
                         @:<td>
                         <input type="checkbox"
                                name="selectedTags"
                                value="@cat.TagID"
                                @(Html.Raw(cat.Assigned ? "checked=\"checked\"" : "")) />
                         @cat.TagID @: @cat.Name
                         @:</td>
                         }
                         @:</tr>
                         }
                     </table>
                 </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
